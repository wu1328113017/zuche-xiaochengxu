/**index.wxss**/
page{
  background: linear-gradient(#6709e2c2,#9e87f1,#ffffff);
  background-repeat: no-repeat;
}/**个人信息**/
.header{
  margin-bottom: 20rpx;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: inline-block;
  vertical-align:middle;
}
/**头部模块**/
.header>view{
  width: 500rpx;
  height: 70rpx;
  border-radius: 30rpx;
  display: inline-block;
  background-color: #680bc0cb;
  margin-left:30rpx;
  color:#ffffff;
  font-size: 32rpx;
  line-height: 70rpx;
  padding-left: 40rpx;
}
/**主要模块**/
/**轮播模块**/
.swiper swiper{
  height: 300rpx !important;
}
.swiper swiper-item image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
/**分类服务导航模块**/
.category_service_nav{
  width: 100%;
  height: 420rpx;
  margin-top: 25rpx;
  position: relative;
}
.category_service_nav .service{
  background-color: #ffffff;
  border-radius: 10rpx;
  display: inline-block;
  position: absolute;
  text-align: center;
  font-size: 20rpx;
  color: #808088;
  box-sizing: border-box;
}
.service1{
  width: 43%;
  height: 65.5%;
  top:0;
  left: 0;
}
.service2{
  width: 56%;
  height: 31.8%;
  top:0;
  right:0;
}
.service3{
  width: 56%;
  height: 31.8%;
  top:33.5%;
  right: 0;
}
.service4{
  width: 100%;
  height: 33%;
  bottom:0;
  left: 0;
  text-align: left !important;
  padding-left: 40rpx;
}
.service1 .title{
  color: #684ff5;
}
.service2 .title{
  color: rgb(0, 255, 34);
}
.service3 .title{
  color: rgba(248, 89, 16, 0.973);
}
.service4 .title{
  color: red;
  margin-top: 30rpx;
}
.title{
  font-weight: bold;
  margin-top: 40rpx;
  display: block;
  font-size: 34rpx;
  letter-spacing: 5rpx;
}
/**导航栏**/
.nav_tabs{
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #f5f5f577;
  font-size: 30rpx;
  letter-spacing: 3rpx;
  box-sizing: border-box;
  display: flex;
  margin-top: 20rpx;
}
.nav_tabs .nav_tab{
  display: inline-block;
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
}
.nav_tabs .nav_tab text{
  display: block;
  color: #666666;
}
.nav_tabs .active text{
  color:black !important;
}
/**商品数据**/
.goods{
  width: 100%;
  box-sizing: border-box;
  font-size: 30rpx;
}
.goods .good{
  padding:10rpx;
}
.goods image{
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}
.goods .price{
  color: red;
  float: right;
}
