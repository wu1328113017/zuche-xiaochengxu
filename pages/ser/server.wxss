/* pages/ser/server.wxss */
/**头部**/
.header{
  position: relative;
  box-sizing: border-box;
}
.header input{
  background-color: #f5f5f5;
  font-size: 20rpx;
  padding-left: 40rpx;
  height: 50rpx;
  box-sizing: border-box;
}
.placeholder{
  font-size: 20rpx;
  color: #808080;
}
.header text{
  position: absolute;
  margin-left: 10rpx;
  display: block;
  box-sizing: border-box;
  height: 50rpx;
  line-height: 50rpx;
  color: #808080;
  font-size: 20rpx;
}
/**身体部分**/
/**筛选**/
.body picker{
  display: inline-block;
  font-size: 26rpx;
  letter-spacing: 2rpx;
  width: 30%;
}
.body .picker1{
  color: red;
}
.body .picker12{
  color: #666666;
}
/**商品数据**/
.body{
  box-sizing: border-box;
}
.goods{
  box-sizing: border-box;
}
.goods .good{
  display: inline-block;
  box-sizing: border-box;
  padding: 20rpx 0;
}
.goods .good1{
  width: 50%;
}
.goods .good2{
  width: 100%;
}
.goods .good image{
  height: 300rpx;
  border-radius: 10rpx;
}
.goods .good1 image{
  width: 99%;
}
.goods .good2 image{
  width: 100%;
}
.goods .good text{
  display: block;
}
.goods .good .name{
  font-size: 28rpx;
  font-weight: bold;
}
.goods .good .name2{
  display: inline-block;
  width: 50%;
}
.goods .good .attribute{
  margin-top: 60rpx;
  font-size: 20rpx;
  color: #808080;
}
.goods .good .price{
  font-size: 30rpx;
}
.goods .good .price2{
  display: inline-block;
  width: 50%;
  text-align: right;
  color: red;
}