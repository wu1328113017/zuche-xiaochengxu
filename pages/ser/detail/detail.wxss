/* pages/ser/detail/detail.wxss */
page{
  padding: 0;
  background: #f5f5f5;
}
/**头部**/
.header{
  position: absolute;
  top: 0;
  width: 100%;
  height: 240rpx;
  background-color: #6709e2c2;
}
.body{
  position: relative;
  z-index: 10000;
  margin-top: 100rpx;
}
.body>view{
  margin: 0 auto;
  width: 90%;
}
/**导航栏**/
.body .nav{
  color: #dcdcdc33;
  font-size: 28rpx;
  height: 100rpx;
}
.body .nav>view{
  display: inline-block;
  width: 50%;
  text-align: center;
}
.body .nav>view>text{
  display: block;
  height: 60rpx;
  width: 100%;
}
.body .nav>view>text:nth-child(2){
  width: 20%;
  height: 4rpx;
  background: #dcdcdc33;
  margin: 0 auto;
  display: none;
}
.body .nav .active{
  color: #ffffff !important;
}
.body .nav .active>text:nth-child(2){
  background: #ffffff !important;
  display: block !important;
}
/**填写信息模块**/
.bgw{
  background: #ffffff;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx;
}
.body .content{
  font-size: 24rpx;
  display: none;
}
.body .content>view{
  padding: 20rpx;
  border-bottom: 1px solid #f5f5f5;
}
.body .bgw .active{
  display: block;
}
/**商品数据**/
.body .bgw>.foot{
  text-align: center;
  padding-bottom: 20rpx;
}
.body .bgw>.foot>image{
  width:60%;
  height: 200rpx;
  margin-top: 40rpx;
}
.body .bgw>.foot .name{
  font-weight: bold;
  font-size: 30rpx;
}
.body .bgw>.foot .attribute{
  color: #808080;
  font-size: 22rpx;
}
.body .bgw .price{
  font-size: 24rpx;
}
.cred{
  color: red;
}
.body .bgw view navigator{
  font-size: 26rpx;
  margin-top: 40rpx;
}
/**body-foot**/
.body>.foot{
  padding: 30rpx 0;
}
.body>.foot .active{
  display: block !important;
}
.body>.foot .confrim{
  background: #6709e2c2;
  display: none;
}
.body>.foot navigator{
  width: 100%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50rpx;
  color: #ffffff;
  background: rgb(0, 255, 34);
  margin: 20rpx 0;
  font-size: 27rpx;
}